<!DOCTYPE html>
<html>
<head>
  <title>Moviesapp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="banner">
	<%=image_tag("rails.png", :size => "100x50") %> Movies App
</div>
<div id="nav">
	<ul>
		<li><%=link_to"Home", root_path %></li>
		<li><%=link_to"Movie News", 'http://www.imdb.com/' %></li>
		<li><%=link_to"Contact Us" %></li>
		<li><%=link_to"Movies", movies_path %></li>
		<% if !signed_in? %>
			<li><%=link_to "Sign In", signin_path %></li>
		<% else %>
			<li>Signed in as <%= @current_user.name %></li>
			<li><%= link_to "Sign Out", signout_path %></li>
		<% end %>
	</ul>
</div>

<% flash.each do |key, value| %>
	<div> class = "flash <%= key %>">
	<%= value %>
<% end %>

<%= yield %>

<div id="footer">
	<%=image_tag("rails_f.jpg", :size =>"500x200") %>
</div>
</body>
</html>
